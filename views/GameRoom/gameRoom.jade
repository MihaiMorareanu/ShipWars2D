block main-content
	center
		.opBoard
			h3 Opponent board (Hit/Miss)
			.game-grid
				table
					- for(var idx1 = 0; idx1 < 11; idx1++) {
					tr
						- for(var idx2 = 0; idx2 < 11; idx2++) {
						if idx1 == 0 && idx2 == 0
							td.outerSquare &nbsp;
						else if idx1 == 0
